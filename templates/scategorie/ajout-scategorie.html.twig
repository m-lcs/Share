{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}Ajout d'une sous-catégorie
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
            Ajout d'une sous-catégorie
        </h1>
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
                <form method="post">
                    {{ form_start(form) }}
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="libelle" class="form-label fw-bold">Libellé</label>
                            {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            <label for="numero" class="form-label fw-bold">Numéro</label>
                            {{ form_widget(form.numero, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            <label for="categorie" class="form-label fw-bold">Catégorie</label>
                            {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            {{ form_widget(form.envoyer, {'label': 'Ajouter', 'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
