{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} Modifier une sous-catégorie
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-10 text-primary">
                <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">MODIFIER UNE SOUS-CATÉGORIE</h1>
                {{ form_start(form) }}
                {{ form_row(form.libelle, {'label': 'Libellé', 'attr': {'class': 'form-control mb-3'}}) }}
                {{ form_row(form.numero, {'label': 'Numéro', 'attr': {'class': 'form-control mb-3'}}) }}
                {{ form_row(form.categorie, {'label': 'Catégorie', 'attr': {'class': 'form-control mb-3'}}) }}
                <div class="text-center">
                    <button type="submit" class="btn bg-primary text-white m-4">Modifier</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
