{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    Votre Profil
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
            Votre Profil
        </h1>
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 bg-white p-4 m-0 text-primary">
                <h3 class="mb-4" style="font-size: smaller; color: black;">
                    {{ prenom }} {{ nom }}
                </h3>
                <h3 style="font-size: smaller; color: black;">Email:</h3>
                <p class="mb-2">{{ email }}</p>
                <h3 style="font-size: smaller; color: black;">Date d'inscription:</h3>
                <p class="mb-2">{{ dateInscription }}</p>
                <h3 style="font-size: smaller; color: black;">Nombre de fichiers:</h3>
                <p class="mb-4">{{ nombreFichiers }}</p>
                {% if nombreFichiers > 0 %}
                    <h4 class="text-center mb-3">Vos fichiers:</h4>
                    <ul class="list-group">
                        {% for fichier in fichiers %}
                            <li class="list-group-item">{{ fichier.nomOriginal }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="text-center">Aucun fichier</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
